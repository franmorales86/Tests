<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="roll" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CATALINA_HOME}/logs/tomcat.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>tomcat.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{10} [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <if condition='property("PARAM1").contains("PRO")'>
        <then>
            <appender name="SIMPLEDB" class="com.reclabs.libs.loggermanager.sdb.SimpleDBAppender">
                <domainName>Log-RecCore</domainName>
                <accessId>AKIAIP5BLIKLE3VPX5ZQ</accessId>
                <secretKey>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</secretKey>
            </appender>
        </then>
        <else>
            <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level %logger{10} [%file:%line] - %msg%n</pattern>
                </encoder>
            </appender>
        </else>
    </if>

    <if condition='property("PARAM1").contains("PRO")'>
        <then>
            <logger name="org.springframework" level="WARN"/>
            <logger name="org.springframework.context" level="WARN"/>
            <logger name="io.searchbox.client" level="WARN"/>
            <root level="INFO">
                <appender-ref ref="SIMPLEDB"/>
                <appender-ref ref="roll"/>
            </root>
        </then>
        <else>
            <logger name="com.reclabs.recomendar" level="DEBUG"/>
            <logger name="org.springframework" level="WARN"/>
            <logger name="org.springframework.web" level="WARN"/>
            <logger name="org.springframework.security" level="WARN"/>
            <logger name="io.searchbox" level="WARN"/>
            <logger name="httpclient.wire" level="WARN"/>
            <logger name="org.apache.catalina" level="WARN"/>
            <logger name="org.apache.http" level="WARN"/>
            <logger name="org.apache.velocity" level="WARN"/>
            <logger name="org.apache.commons" level="WARN"/>
            <logger name="com.amazonaws" level="WARN"/>
            <logger name="org.jets3t" level="WARN"/>
            <root level="DEBUG">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="roll"/>
            </root>
        </else>
    </if>
</configuration>
